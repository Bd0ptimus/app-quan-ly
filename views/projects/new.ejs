<% layout('layouts/boilerplate')%>
<form class="row mt-5" action="/projects" method="POST">
  <div class="col-xl-6">
    <div class="mb-3">
      <label for="projectname" class="form-label">Tiêu đề</label>
      <input
        type="text"
        id="projectname"
        class="form-control"
        placeholder="Enter project name"
        name="title"
      />
    </div>

    <div class="mb-3">
      <label for="project-overview" class="form-label">Nội dung</label>
      <textarea
        class="form-control"
        id="project-overview"
        rows="5"
        placeholder="Enter some brief about project.."
        name="description"
      ></textarea>
    </div>

    <!-- Date View -->
    <div class="mb-3 position-relative row" id="datepicker1">
      <div class="mb-3 position-relative col-6">
        <label for="created" class="form-label">Bắt đầu</label>
        <input type="date" class="form-control" id="created" name="created" value="<%= created %>" disabled />
      </div>
      
      <div class="mb-3 position-relative col-6" id="datepicker2">
        <label for="deadline" class="form-label">Deadline</label>
        <input type="date" id="deadline" class="form-control" name="deadline"/>
    </div>

    <div class="mb-3">
      <label for="project-budget" class="form-label">Chi tiêu</label>
      <input
        type="text"
        id="project-budget"
        class="form-control"
        placeholder="Enter project budget"
        name="spendings"
      />
    </div>
  </div>

  <div class="col-xl-6">
    
    
  </div>
  <div class="row">
    <div class="col-3">
      <button class="btn btn-primary">Tạo dự án</button>
    </div>
  </div>
</form>
