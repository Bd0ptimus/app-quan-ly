<% layout('layouts/boilerplate')%>

<div class="row">
  <div class="col-lg-4">
    <div class="card mb-4">
      <div class="card-body text-center">
        <% role = currentUser.work.position; if(role === 'admin' || role ===
        'hr'){%>
        <div class="row d-flex flex-row-reverse">
          <div class="col-3">
            <a href="/users/<%= user._id %>/edit" class="btn btn-sm btn-success">Edit</a>
          </div>
        </div>
        <% } %>
        <img
          src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp"
          alt="avatar"
          class="rounded-circle img-fluid"
          style="width: 150px"
        />
        <h5 class="my-3 card-title"><%= user.pi.fullname%></h5>
        <p class="card-text">Từ <%= user.initDate %></p>
      </div>
    </div>
    <div class="card mb-4 mb-lg-0">
      <div class="card-body">
        <h5 class="card-title mb-3">Liên hệ</h5>
        <div class="row">
          <div class="col-sm-4">
            <p class="mb-0">Email</p>
          </div>
          <div class="col-sm-8">
            <p class="text-muted mb-0"><%= contacts.email %></p>
          </div>
        </div>
        <hr />
        <div class="row">
          <div class="col-sm-4">
            <p class="mb-0">Số điện thoại</p>
          </div>
          <div class="col-sm-8">
            <p class="text-muted mb-0"><%= contacts.phone %></p>
          </div>
        </div>
        <hr />
      </div>
    </div>
  </div>
  <div class="col-lg-8">
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title mb-3">Thông tin cá nhân</h5>
        <div class="row my-4">
          <div class="col-sm-3">
            <p class="mb-0">Họ và tên</p>
          </div>
          <div class="col-sm-9">
            <p class="text-muted mb-0"><%= pi.fullname %></p>
          </div>
        </div>
        <div class="row my-4">
          <div class="col-sm-3">
            <p class="mb-0">Ngày sinh</p>
          </div>
          <div class="col-sm-9">
            <p class="text-muted mb-0">
              <%= `${dob.day}/${dob.month}/${dob.year}` %>
            </p>
          </div>
        </div>
        <div class="row my-4">
          <div class="col-sm-3">
            <p class="mb-0">Giới tính</p>
          </div>
          <div class="col-sm-9">
            <p class="text-muted mb-0"><%= pi.gender %></p>
          </div>
        </div>

        <div class="row my-4">
          <div class="col-sm-3">
            <p class="mb-0">Địa chỉ</p>
          </div>
          <div class="col-sm-9">
            <p class="text-muted mb-0"><%= pi.fullLocation %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
