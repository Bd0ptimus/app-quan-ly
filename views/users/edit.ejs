<% layout('layouts/boilerplate') %>
<div class="container">
  <h2>Cập nhật thông tin</h2>
  <form action="/users/<%= currentUser._id%>?_method=PUT" method="POST">
    <div class="row mb-3">
      <div class="col-md-3">
        <label for="code" class="form-label">Mã nhân viên</label>
        <input type="text" class="form-control" id="code" name="info[code]" />
      </div>
      <div class="col-md-4">
        <label for="phone" class="form-label">Số điện thoại</label>
        <input type="text" class="form-control" id="phone" name="info[phone]" />
      </div>
      <div class="col-md-5">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="info[email]" />
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-6">
        <label for="surname" class="form-label">Họ và tên đệm</label>
        <input type="text" class="form-control" name="info[surname]" />
      </div>
      <div class="col-md-6">
        <label for="name" class="form-label">Tên</label>
        <input type="text" class="form-control" name="info[name]" />
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-6">
        <label for="dob" class="form-label">Ngày sinh</label>
        <input type="date" class="form-control" name="info[dob]" />
      </div>
      <div class="col-md-6">
        <label for="gender" class="form-label">Giới tính</label>
        <select class="form-select" id="gender">
          <option selected>Select Gender</option>
          <option value="male">Nam</option>
          <option value="female">Nữ</option>
          <option value="other">Khác</option>
        </select>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-4">
        <label for="city" class="form-label">Tỉnh/Thành phố</label>
        <input type="text" class="form-control" name="location[city]" />
      </div>
      <div class="col-md-4">
        <label for="district" class="form-label">Quận/Huyện</label>
        <input type="text" class="form-control" name="location[district]" />
      </div>
      <div class="col-md-4">
        <label for="zipcode" class="form-label">Zipcode</label>
        <input type="text" class="form-control" name="location[zipcode]" />
      </div>
    </div>
    <div class="row mb-3">
      <div class="">
        <label for="status" class="form-label">Trạng thái</label>
        <div>
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="info[status]"
              id="active"
              value="true"
            />
            <label class="form-check-label" for="active">Hoạt động</label>
          </div>
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="info[status]"
              id="suspended"
              value="false"
            />
            <label class="form-check-label" for="suspended">Đình chỉ</label>
          </div>
        </div>
      </div>
      <div class="">
        <label for="job" class="form-label">Vị trí</label>
        <div>
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="info[job]"
              id="active"
              value="ft"
            />
            <label class="form-check-label" for="active">Full-time</label>
          </div>
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="info[job]"
              id="suspended"
              value="pt"
            />
            <label class="form-check-label" for="suspended">Part-time</label>
          </div>
        </div>
      </div>
    </div>
    <button class="btn btn-primary">Cập nhật thông tin</button>
  </form>
</div>
